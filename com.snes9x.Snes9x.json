{
    "app-id": "com.snes9x.Snes9x",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "command": "snes9x-gtk",
    "rename-desktop-file": "snes9x.desktop",
    "rename-icon": "snes9x",
    "finish-args": [
        "--device=dri",
        "--socket=x11",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        {
            "name": "snes9x",
            "subdir": "gtk",
            "config-opts": [
                "--with-gtk3",
                "--without-alsa",
                "--without-system-zip"
            ],
            "post-install": [
                "install -Dm644 com.snes9x.Snes9x.appdata.xml /app/share/appdata/com.snes9x.Snes9x.appdata.xml",
                "install -Dm644 ../docs/snes9x-license.txt /app/share/licenses/snes9x/license.txt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/snes9xgit/snes9x/archive/1.55.tar.gz",
                    "sha256": "d6b7e5a4cd786f23ff538b81cf816c6dbe37ddab02afe13e3fe54889e99860da"
                },
                {
                    "type": "file",
                    "path": "com.snes9x.Snes9x.appdata.xml",
                    "dest": "gtk"
                }
            ]
        }
    ]
}
