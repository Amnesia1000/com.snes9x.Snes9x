{
    "app-id": "com.snes9x.Snes9x",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "1.6",
    "command": "snes9x-gtk",
    "rename-desktop-file": "snes9x.desktop",
    "rename-icon": "snes9x",
    "finish-args": [
        "--device=dri",
        "--socket=x11",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        {
            "name": "snes9x",
            "subdir": "gtk",
            "config-opts": [
                "--with-gtk3",
                "--without-alsa",
                "--without-system-zip"
            ],
            "post-install": [
                "install -Dm644 com.snes9x.Snes9x.appdata.xml /app/share/appdata/com.snes9x.Snes9x.appdata.xml",
                "install -Dm644 ../docs/snes9x-license.txt /app/share/licenses/snes9x/license.txt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/snes9xgit/snes9x/archive/1.56.2.tar.gz",
                    "sha256": "1557ade36c3b47aedf766b4504d141521f565664a6264c04f4c44f5a2dfada4f"
                },
                {
                    "type": "file",
                    "path": "com.snes9x.Snes9x.appdata.xml",
                    "dest": "gtk"
                }
            ]
        }
    ]
}
