{
    "app-id": "com.snes9x.Snes9x",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "18.08",
    "command": "snes9x-gtk",
    "rename-desktop-file": "snes9x.desktop",
    "rename-icon": "snes9x",
    "finish-args": [
        "--device=all",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "snes9x",
            "subdir": "gtk",
            "config-opts": [
                "--without-alsa",
                "--without-oss",
                "--without-portaudio",
                "--without-system-zip"
            ],
            "post-install": [
                "install -Dm644 com.snes9x.Snes9x.appdata.xml /app/share/appdata/com.snes9x.Snes9x.appdata.xml",
                "install -Dm644 ../docs/snes9x-license.txt /app/share/licenses/snes9x/license.txt"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/snes9xgit/snes9x/releases/download/1.57/snes9x-1.57.tar.bz2",
                    "sha256": "73bc07ac89e424d1c5d4e69621f22d8ca645bf2822d46857549ec3c3313663f0"
                },
                {
                    "type": "file",
                    "path": "com.snes9x.Snes9x.appdata.xml",
                    "dest": "gtk"
                }
            ]
        }
    ]
}
